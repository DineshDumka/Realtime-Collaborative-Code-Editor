# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/code-editor

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Firebase Configuration (Frontend)
REACT_APP_FIREBASE_API_KEY=your-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-app
REACT_APP_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id

# Backend Firebase Service Account (for Admin SDK)
# Option 1: Set path to the service account key file
GOOGLE_APPLICATION_CREDENTIALS=./path-to-service-account-key.json

# Option 2: Use the service account JSON directly (for cloud deployment)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-app",...} 